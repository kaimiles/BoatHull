FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{
    type            motionSolver;

    libs            ("librigidBodyMeshMotion.so");

    motionSolver    rigidBodyMotion;

    report          on;

    solver
    {
        type Newmark;
    }

    accelerationRelaxation 0.4;

    bodies
    {
        hull
        {
            type            rigidBody;
            parent          root;

            centreOfMass    (5 5 5);
            mass            1;
            inertia         (1 0 0 1 0 1);
            transform       (   0.98 0 -0.01
                                0 1 0 
                                0.01 0 0.99
                            ) 
                            (5 5 5);

            joint
            {
                type    composite;
                joints
                (
                    {
                        type Pz;
                    }
                    {
                        type Ry;
                    }
                );
            }

            patches         (hull);
            innerDistance   0.3;
            outerDistance   5;
        }
    }

    restraints
    {
        translationDamper
        {
            type linearDamper;
            body hull;
            coeff 5000;
        }

        rotationDamper
        {
            type sphericalAngularDamper;
            body hull;
            coeff 5000;
        }

        force
        {
            type        externalForce;
            body        hull;
            location    (0 0 0);
            force       (10 0 0);
        }
    }
}


// ************************************************************************* //
